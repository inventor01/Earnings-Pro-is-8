{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "gunicorn -w 4 -k uvicorn.workers.UvicornWorker -b 0.0.0.0:8000 backend.app:app",
    "restartPolicyMaxRetries": 3,
    "healthchecks": {
      "enabled": true,
      "cpu": {
        "percentage": 80
      },
      "memory": {
        "percentage": 90
      }
    }
  }
}
